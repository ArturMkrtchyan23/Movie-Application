<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMovieShow">



  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="@drawable/movie_show_page_view">

      <ImageView
          android:id="@+id/imgKino_backdrop_path"
          android:layout_width="match_parent"
          android:layout_height="300dp"
          android:src="@drawable/netflix"
          />


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
            <TextView
                android:id="@+id/name_original_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Kino"
                android:textSize="20dp"

                />

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">


          <TextView
              android:id="@+id/time_runtime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="40min"
              android:textSize="20dp"
              android:layout_marginTop="10dp"

              />
          <TextView
              android:id="@+id/movieData"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:text="2022-04-06"
              android:layout_marginTop="10dp"
              android:textSize="20dp"
              />
      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="15dp">

          <TextView
              android:id="@+id/count"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1800"
              android:textSize="20dp"
              />
          <TextView
              android:id="@+id/average"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="6.9"
              android:textSize="20dp"
              android:layout_marginLeft="10dp"
              />
      </LinearLayout>


      <Button
          android:id="@+id/playMovie"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:drawableLeft="@android:drawable/ic_media_play"
          android:text="play"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:textSize="17dp"
          android:background="@drawable/round"

          />

      <TextView
          android:id="@+id/description_overview"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="overview"
          android:textSize="18dp"
          android:layout_marginTop="20dp"
          />
  </LinearLayout>

</RelativeLayout>